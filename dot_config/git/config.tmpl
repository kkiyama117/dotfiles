; main
[core]
  editor = nvim
  pager = delta
  quotepath = false
[user]
  name = {{ (bitwardenFields "item" "e3b401ae-2ed9-489b-8328-b1a9003e3cdb").user_name.value }}
  email = {{ (bitwarden "item" "e3b401ae-2ed9-489b-8328-b1a9003e3cdb").login.username }}
{{ if eq .chezmoi.os "windows" }}
{{ else }}
  signingkey = {{ (bitwardenFields "item" "e3b401ae-2ed9-489b-8328-b1a9003e3cdb").user_signingkey.value }}
{{ end }}
[init]
  defaultBranch = main
[commit]
  verbose = true
  gpgsign = true
[pull]
  rebase = false
  ff = only
[push]
  default=current

; cred
{{ if eq .chezmoi.os "windows" }}
[gpg]
  program = C:\\Program Files (x86)\\GnuPG\\bin\\gpg.exe
{{ else }}
[credential]
  helper = libsecret
{{ end }}

; pager
[diff]
  colorMoved = default
[merge]
  conflictStyle = diff3
  ff = false
[pager]
  blame = delta
  diff = delta
; log = delta
  reflog = delta
  show = delta
[interactive]
  diffFilter = delta --color-only
[delta]
  keep-plus-minus-markers = true
  plus-style = syntax "#012800" 
  minus-style = normal "#340001" 
  syntax-theme = "Monokai Extended"
  hunk-header-style = "omit"
  diff-so-fancy = true
  line-numbers = true
  side-by-side = true
  navigate = true
  hyperlinks = true
  dark = true
